<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name = "white">
        <color rgba = "1 1 1 1"/>
    </material>

    <material name = "orange">
        <color rgba = "1 1 1 1"/>
    </material>

    <material name = "blue">
        <color rgba = "1 1 1 1"/>
    </material>

    <material name = "black">
        <color rgba = "1 1 1 1"/>
    </material>
<!-- base link -->
    <link name = "base_link">

    </link>

    <!-- Chassis -->
    <joint name = "chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link = "chassis"/>
        <origin xyz = "0 0 -0.07"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz = "0 0 0.035"/>
            <geometry>
                <cylinder radius = "0.125" length = "0.07"/> 
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- left wheel -->
    <joint name = "left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.14 -0.07" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
        
        
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.065" length="0.026"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- right wheel -->
    <joint name = "right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.14 -0.07" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1"/>
        
        
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.065" length="0.026"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

</robot>